doctype html
html
  head
    title= title
    link(rel="shortcut icon" href='/img/favicon.ico')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
  body(class="d-flex flex-column min-vh-100")
    block header
      header(role="banner" class="sticky-top" style="background-color: #e5f5f7;padding:10px;")
        nav(class="navbar navbar-expand-lg")
          div.container-fluid
            span
              a(href="/")
                img(height="50px" src= "/img/fiware.svg")
              a(class="ms-2 align-bottom" href="https://www.etsi.org/deliver/etsi_gs/CIM/001_099/009/01.08.01_60/gs_cim009v010801p.pdf")
                img(src="/img/NGSI-LD.svg")
            span.ms-auto
              - if (session && session.username)
                a.ms-2(href="/logout") #{session.username}
            ul.ms-2
              img(id="weathericon" class="pe-2" src='/img/none.svg' width="32" height="32")
    div(class="container-xxl")
      block content
        - if title
          h1= title
